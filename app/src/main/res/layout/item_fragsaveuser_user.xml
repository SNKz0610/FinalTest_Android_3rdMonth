<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        app:dragEdge="right"
        app:mode="same_level"
        android:background="#034477">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_edit"
            android:layout_width="120dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/icon_edit"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/icon_delete"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/recycling_bin"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:background="#AEFF51">

            <TextView
                android:id="@+id/text_itemuser_login"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="#000000"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/text_itemuser_type"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/text_itemuser_type"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="#000000"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/text_itemuser_url"
                app:layout_constraintTop_toBottomOf="@id/text_itemuser_login" />

            <TextView
                android:id="@+id/text_itemuser_url"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="#000000"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_itemuser_type"
                app:layout_constraintVertical_chainStyle="packed" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.chauthai.swipereveallayout.SwipeRevealLayout>
</layout>